@model DotnetEfCore.DataContext.MailboxEntity

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Edit Mailbox</h2>
<form asp-controller="Mailbox" asp-action="Update" method="post">
    <input type="hidden" asp-for="Id" />
     <div class="form-group">
        <label asp-for="Username">user Sending</label>
        <input asp-for="Username" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="ToRecipients">toRecipients</label>
        <input asp-for="ToRecipients" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="CCRecipients">cCRecipients</label>
        <input asp-for="CCRecipients" class="form-control">
    </div>

         <div class="form-group">
        <label asp-for="Subject">subject</label>
        <input asp-for="Subject" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Body">Massage body</label>
        <input asp-for="Body" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Attachment">attachment</label>
        <input asp-for="Attachment" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Scheduled">scheduled</label>
        <input asp-for="Scheduled" class="form-control">
    </div>


    <div class="form-group">
        <label asp-for="StatusDone">Status Sendemail</label>
        <select class="form-select" aria-label="Set StatusDone" id="StatusDone" name="StatusDone"> 
            <option selected>Select status Here</option>
            <option value="false">False</option>
            <option value="true">True</option>
        </select>
    </div>

    <div class="form-footer">
        <button type="submit" class="btn btn-warning">Update</button>
    </div>
</form>
