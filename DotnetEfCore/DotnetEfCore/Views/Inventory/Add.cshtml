@model DotnetEfCore.DataContext.InventoryEntity

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Add New Inventory</h2>
<form asp-controller="Inventory" asp-action="Save" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Specification">Specification</label>
        <input asp-for="Specification" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Quantity">Quantity</label>
        <input asp-for="Quantity" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="OnLoan">On Loan</label>
        <input asp-for="OnLoan" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Ready">Ready</label>
        <input asp-for="Ready" class="form-control">
    </div>

    <div class="form-footer">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
