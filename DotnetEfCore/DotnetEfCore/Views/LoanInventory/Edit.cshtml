@model DotnetEfCore.DataContext.LoanInventoryEntity

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Edit LoanInventory</h2>
<form asp-controller="LoanInventory" asp-action="Update" method="post">
    <input type="hidden" asp-for="Id" />
     <div class="form-group">
        <label asp-for="NameUser">Name User For Loan</label>
        <input asp-for="NameUser" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Detail">Detail</label>
        <input asp-for="Detail" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="NameAdmin">Admin Pemberi Acc</label>
        <input asp-for="NameAdmin" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Status">Status Peminjaman</label>
        <select class="form-select" aria-label="Set Status" id="Status" name="Status"> 
            <option selected>Select Status Here</option>
            <option value="false">False</option>
            <option value="true">True</option>
        </select>
    </div>

    <div class="form-footer">
        <button type="submit" class="btn btn-warning">Update</button>
    </div>
</form>
